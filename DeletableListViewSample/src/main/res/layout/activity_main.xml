<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.daya.deletablelistview.sample.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.daya.deletablelistview.sample.NonScrollListView
                android:id="@+id/log_type_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.daya.deletablelistview.sample.NonScrollListView>

            <Button
                android:id="@+id/add_log_type_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADD"/>

            <Button
                android:id="@+id/get_log_type_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GET"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <com.daya.deletablelistview.sample.NonScrollListView
                android:id="@+id/user_field_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.daya.deletablelistview.sample.NonScrollListView>

            <Button
                android:id="@+id/add_user_field_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADD"/>

            <Button
                android:id="@+id/get_user_field_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GET"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
